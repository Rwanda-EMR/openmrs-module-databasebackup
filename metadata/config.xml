<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.2//EN" "http://resources.openmrs.org/doctype/config-1.2.dtd">

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>databasebackup</id>
	<name>Database Backup Module</name>
	<version>0.1</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Mathias Lin</author>
	<description>
            Backup database through the OpenMRS administration interface.
	</description>

	<activator>@MODULE_PACKAGE@.DatabaseBackupActivator</activator>
	
	<!-- <updateURL>https://dev.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>1.2.0.3400</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.AdminList</class>
	</extension>
	

	<!-- Required Global Properties -->
	<globalProperty>
		<property>@MODULE_ID@.tablesIncluded</property>
		<defaultValue>all</defaultValue>
		<description>
			Defines which tables to include in the backup task.
            Can use 'all' (default) to include all tables.
		</description>
	</globalProperty>
        <globalProperty>
		<property>@MODULE_ID@.tablesExcluded</property>
		<defaultValue>none</defaultValue>
		<description>
			Defines which tables to exclude from the backup task.
            Can use 'none' (default) to exclude no tables.
		</description>
	</globalProperty>			
        
    <dwr>
        <allow>
            <create creator="new" javascript="BackupFormController">
                <param name="class" value="@MODULE_PACKAGE@.web.controller.BackupFormController"/>
                <!-- <include method="getProgress"/> -->
            </create>
        </allow>                 
    </dwr>
	
	<!-- Internationalization -->
	<!-- All message codes should start with @MODULE_ID@.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>	
	<!-- /Internationalization -->
	
</module>

